{
    "name": "miraris/glimmershot",
    "description": "Simple Vainglory player statistics.",
    "keywords": ["glimmershot", "vainglory", "statistics"],
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Miraris",
            "email": "miirariis@gmail.com",
            "homepage": "https://miraris.me"
        }
    ],
    "support": {
        "email": "miirariis@gmail.com",
        "issues": "https://github.com/miraris/glimmershot/issues",
        "source": "https://github.com/miraris/glimmershot",
        "wiki": "https://github.com/miraris/glimmershot/wikis/home"
    },
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.3",
        "guzzlehttp/guzzle": "^6.3",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload":{
        "psr-4":{
          "App\\":"src/classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
